<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >

    <ImageButton
        android:id="@+id/music"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/listItemMarginTop"
        android:layout_alignParentLeft="true"
        android:background="@drawable/music" />

    <ImageButton
        android:id="@+id/masterset"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/listItemMarginTop"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/speaker_default" />
    
    <TextView
        android:id="@+id/speakername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/music"
        android:layout_toLeftOf="@id/masterset"
        android:layout_marginTop="@dimen/listItemMarginTop"
        android:paddingRight="5dp"
        android:baselineAlignBottom="true"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="speakers"
        android:textColor="#000000"
        android:textSize="17sp" />    

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/masterset"
        android:layout_alignLeft="@id/masterset"
        android:layout_alignRight="@id/masterset"
        android:layout_alignTop="@id/masterset"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speakername"
        android:baselineAlignBottom="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="5dp"
        android:src="@drawable/line" />

</RelativeLayout>